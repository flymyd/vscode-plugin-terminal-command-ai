{
  "name": "shell-ai-completion-helper",
  "displayName": "shell-ai-completion-helper",
  "description": "Provide AI-powered capabilities for the VS Code shell.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shell-ai-completion-helper.generateCommand",
        "title": "AI: Generate Terminal Command"
      }
    ],
    "configuration": {
      "title": "My Terminal AI",
      "properties": {
        "myTerminalAI.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "The API endpoint URL for the Large Language Model."
        },
        "myTerminalAI.modelName": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "The name of the model to use (e.g., gpt-4o-mini, gpt-3.5-turbo)."
        },
        "myTerminalAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your API key for the LLM service. Stored securely.",
          "secret": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
