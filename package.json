{
  "name": "terminal-command-ai",
  "displayName": "TerminalCommandAI",
  "description": "Provide AI-powered capabilities for the VS Code shell.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "TerminalCommandAI.generateCommand",
        "title": "Terminal Command AI: Generate Terminal Command"
      },
      {
        "command": "TerminalCommandAI.quickGenerate",
        "title": "Terminal Command AI: Quick Generate from Terminal Comment"
      }
    ],
    "keybindings": [
      {
        "command": "TerminalCommandAI.quickGenerate",
        "key": "ctrl+x",
        "mac": "cmd+x",
        "when": "terminalFocus && config.TerminalCommandAI.quickGenerateKeybinding == 'ctrl+x'"
      },
      {
        "command": "TerminalCommandAI.quickGenerate",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "terminalFocus && config.TerminalCommandAI.quickGenerateKeybinding == 'ctrl+shift+x'"
      },
      {
        "command": "TerminalCommandAI.quickGenerate",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "terminalFocus && config.TerminalCommandAI.quickGenerateKeybinding == 'ctrl+shift+g'"
      },
      {
        "command": "TerminalCommandAI.quickGenerate",
        "key": "ctrl+alt+x",
        "mac": "cmd+alt+x",
        "when": "terminalFocus && config.TerminalCommandAI.quickGenerateKeybinding == 'ctrl+alt+x'"
      }
    ],
    "configuration": {
      "title": "Terminal Command AI",
      "properties": {
        "TerminalCommandAI.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "The API endpoint URL for the Large Language Model."
        },
        "TerminalCommandAI.modelName": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "The name of the model to use (e.g., gpt-4o-mini, gpt-3.5-turbo)."
        },
        "TerminalCommandAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your API key for the LLM service. Stored securely.",
          "secret": true
        },
        "TerminalCommandAI.quickGenerateKeybinding": {
          "type": "string",
          "default": "ctrl+x",
          "enum": [
            "ctrl+x",
            "ctrl+shift+x",
            "ctrl+shift+g",
            "ctrl+alt+x"
          ],
          "enumDescriptions": [
            "Ctrl+X (Cmd+X on Mac)",
            "Ctrl+Shift+X (Cmd+Shift+X on Mac)",
            "Ctrl+Shift+G (Cmd+Shift+G on Mac)",
            "Ctrl+Alt+X (Cmd+Alt+X on Mac)"
          ],
          "description": "Custom keybinding for quick AI command generation. Select from predefined options."
        },
        "TerminalCommandAI.terminalPreference": {
          "type": "string",
          "default": "bash",
          "enum": [
            "bash",
            "powershell",
            "cmd"
          ],
           "enumDescriptions": [
            "bash (Unix-like, e.g. macOS / Linux)",
            "powershell (Windows)",
            "cmd (previous Windows)"
          ],
          "description": "The preferred terminal shell for generating commands."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}